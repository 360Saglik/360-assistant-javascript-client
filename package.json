{
  "name": "@saglik360/assistant-client-library",
  "version": "1.0.0",
  "description": "This library provides a simple way to authenticate and interact with an assistant API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.config.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "assistant",
    "api-client",
    "typescript",
    "authentication",
    "http-client",
    "360saglik"
  ],
  "author": {
    "name": "360 Saglik ve Turizm Hizmeteleri A.S.",
    "email": "developer@360saglik.com",
    "url": "https://github.com/360saglik"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/360saglik/"
  },
  "bugs": {
    "url": "https://github.com/360Saglik/360-assistant-typescript-client/issues"
  },
  "homepage": "https://github.com/360Saglik/360-assistant-typescript-client#readme",
  "dependencies": {
    "axios": "^1.6.2",
    "package-lock.json": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "~5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
